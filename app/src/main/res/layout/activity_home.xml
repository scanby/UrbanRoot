<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/LogoMediano"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/logo3"
            />


        <Button
            android:id="@+id/buttonRegisterCategorias"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:backgroundTint="#7BA51B"
            android:layout_gravity="center"
            android:text="Registro"
            android:textSize="18sp"
            app:cornerRadius="10dp"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/buttonEstadisticas"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:backgroundTint="#7BA51B"
            android:layout_gravity="center"
            android:text="Estadisticas"
            android:textSize="18sp"
            app:cornerRadius="10dp"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/buttonCosecha"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:backgroundTint="#7BA51B"
            android:layout_gravity="center"
            android:text="Cosecha"
            android:textSize="18sp"
            app:cornerRadius="10dp"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/buttonConsejos"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:backgroundTint="#7BA51B"
            android:layout_gravity="center"
            android:text="Consejos"
            android:textSize="18sp"
            app:cornerRadius="10dp"
            android:layout_marginBottom="20dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">



            <Button
                android:id="@+id/buttonSalir"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:backgroundTint="#F4511E"
               android:text="Salir "
                android:textSize="18sp"
                app:cornerRadius="10dp"
                android:layout_gravity="center"
                               />


        </LinearLayout>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>